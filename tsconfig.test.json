{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": "./",
    "paths": {
      "@scalable.software/web.component": ["./src/Index.js"]
    },
    "declaration": false
  },
  "include": ["./src/**/*", "./test/unit/**/*"],
  "exclude": ["node_modules", "dist", "tasks"],
  "typedocOptions": {
    "entryPoints": ["./src/*.ts"],
    "excludePrivate": true,
    "excludeProtected": true,
    "disableSources": true,
    "categorizeByGroup": false,
    "sort": ["static-first", "visibility"],
    "name": "Web Component",
    "plugin": ["typedoc-plugin-merge-modules"],
    "mergeModulesMergeMode": "module",
    "hideGenerator": true
  }
}
